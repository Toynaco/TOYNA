datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  price       Float
  imageUrl    String
  description String?
  createdAt   DateTime @default(now())
}
